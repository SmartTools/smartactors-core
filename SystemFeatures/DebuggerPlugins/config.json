{
  "featureName":"info.smart_tools.smartactors:debugger-plugins:0.7.0",
  "afterFeatures":[
    "info.smart_tools.smartactors:core-service-starter:0.7.0",
    "info.smart_tools.smartactors:feature-loading-system:0.7.0",
    "info.smart_tools.smartactors:debugger:0.7.0"
  ],
  "repository":{
    "id": "smartactors_core_and_core_features_dev",
    "url": "https://repository.smart-tools.info/artifactory"
  },
  "objects": [
    {
      "kind": "actor",
      "dependency": "debugger actor",
      "name": "debugger"
    },
    {
      "kind": "raw",
      "dependency": "response sender receiver",
      "name": "respond"
    }
  ],
  "maps": [
    {
      "id": "execute_debugger_command",
      "externalAccess": true,
      "steps": [
        {
          "target": "debugger",
          "handler": "executeCommand",
          "wrapper": {
            "in_getCommand": "message/command",
            "in_getSessionId": "message/sessionId",
            "in_getCommandArguments": "message/args",
            "in_getDebuggerAddress": "arguments/target",

            "out_setCommandResult": "response/result",
            "out_setException": "response/exception"
          }
        },
        {
          "target": "respond",
          "handler": "sendResponse"
        }
      ],
      "exceptional": []
    }
  ]
}
