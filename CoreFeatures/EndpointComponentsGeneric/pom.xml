<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>info.smart_tools.smartactors</groupId>
        <artifactId>core-features</artifactId>
        <version>0.3.3</version>
    </parent>

    <groupId>info.smart_tools.smartactors</groupId>
    <artifactId>endpoint-components-generic</artifactId>
    <version>0.3.3</version>

    <packaging>pom</packaging>

    <dependencies>
        <!-- Endpoint component interfaces -->
        <dependency>
            <groupId>info.smart_tools.smartactors</groupId>
            <artifactId>endpoint-interfaces.imessage-handler</artifactId>
            <version>[0.0.1, 1.0.0)</version>
        </dependency>
        <dependency>
            <groupId>info.smart_tools.smartactors</groupId>
            <artifactId>endpoint-interfaces.imessage-byte-array</artifactId>
            <version>[0.0.1, 1.0.0)</version>
        </dependency>
    </dependencies>

    <modules>
        <module>ParseTree</module>
        <module>ScopeSetterMessageHandler</module>
        <module>SendInternalMessageHandler</module>
        <module>CreateEnvironmentMessageHandler</module>
        <module>AsynchronousUnorderedMessageHandler</module>
        <module>DefaultMessageContextImplementation</module>
        <module>MessageAttributeRoutingMessageHandler</module>
        <module>CreateEmptyMessageMessageHandler</module>
        <module>DefaultMessageCodecs</module>
        <module>GenericExceptionInterceptorMessageHandler</module>
        <module>EndpointResponseStrategy</module>
        <module>ResponseStrategySetMessageHandler</module>
        <module>DefaultEndpointProfile</module>
        <module>EndpointProfilesConfigurationSection</module>
        <module>DefaultEndpointPipelineSet</module>
        <module>DeadEndMessageHandler</module>
        <module>DefaultOutboundConnectionChannel</module>
        <module>OutboundMessageSender</module>
        <module>MessageHandlerResolutionStrategy</module>
        <module>ErrorMessageHandler</module>
        <module>EndpointsConfigSectionStrategy</module>
        <module>DefaultEndpointPipelineImplementation</module>
        <module>DefaultOutboundChannelListener</module>
        <module>CompositeExceptionalAction</module>
        <module>CommonExceptionTypes</module>
        <module>HandlerConfigurationObject</module>
        <module>NullClientCallback</module>
        <module>OutboundRequestSender</module>
        <module>InterruptClientCallback</module>
        <module>ClientHandlers</module>
        <module>OutboundUrlParser</module>
        <module>AddFinalActionsHandler</module>
        <module>ExpectSentResponseFinalAction</module>
        <module>StoreRawInboundMessageHandler</module>
        <module>RespondToChainClientCallback</module>
        <module>EndpointComponentsGenericDistribution</module>
    </modules>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>3.5.1</version>
                    <configuration>
                        <source>1.8</source>
                        <target>1.8</target>
                    </configuration>
                </plugin>
                <plugin>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <version>2.19.1</version>
                    <configuration>
                        <useSystemClassLoader>false</useSystemClassLoader>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>3.0.0</version>
                    <inherited>true</inherited>
                    <executions>
                        <execution>
                            <phase>package</phase>
                            <goals>
                                <goal>single</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-deploy-plugin</artifactId>
                    <inherited>true</inherited>
                    <version>2.8.2</version>
                    <executions>
                        <execution>
                            <id>default-deploy</id>
                            <phase>none</phase>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>

</project>
