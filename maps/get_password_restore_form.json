{
  "get_password_restore_form_map": [
    {
      "actor": "createSessionActor",
      "handler": "getSession",
      "wrapper": {}
    },
    {
      "actor": "authenticationActor",
      "handler": "authenticateSession",
      "wrapper": {
        "getRequestUserAgent": {
          "type": "in",
          "source": "context",
          "rules": [
            {
              "name": "getHeaderFromRequest",
              "args": [
                "User-Agent"
              ]
            }
          ]
        },
        "getSessionUserAgent": {
          "type": "in",
          "source": "message.session.authInfo.userAgent"
        }
      }
    },
    {
      "actor" : "closeAsyncOperationActor",
      "handler" : "closeAsyncOp",
      "wrapper" : {
        "getToken" : {
          "type" : "in",
          "source" : "message.token"
        }
      }
    },
    {
      "actor": "asyncOpsActor",
      "handler": "createOperation",
      "wrapper": {
        "getIObject": {
          "type": "in",
          "source": "message"
        }
      }
    },
    {
      "actor": "getFormActor",
      "handler": "getForm",
      "wrapper": {
        "getFormKey": {
          "type": "in",
          "source": "message.formKey"
        },
        "setForm": {
          "type": "out",
          "target": "response.form"
        }
      }
    }
  ]
}